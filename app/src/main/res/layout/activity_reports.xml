<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отчёты по оборудованию"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Общее количество: —"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvByStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По статусам:\nРаботает: —\nВ ремонте: —\nСписано: —"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvByCabinet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По кабинетам (топ):\n—"
            android:textSize="18sp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить отчёт"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>